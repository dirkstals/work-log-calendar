{
  "name": "WorkLogCalendar",
  "version": "0.1.0",
  "description": "",
  "main": "src/index.html",
  "window": {
    "toolbar": false,
    "frame": true,
    "width": 800,
    "height": 700,
    "icon": "src/images/icon-192.png"
  },
  "scripts": {
    "start": "nw",
    "build": "nwbuild -p osx32,win32 -o dist -v 0.12.0 .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "vbox": "npm run vbox:sharedfolder && npm run vbox:run",
    "vbox:sharedfolder": "npm run vbox:sharedfolder:remove && npm run vbox:sharedfolder:add",
    "vbox:sharedfolder:remove": "VBoxManage sharedfolder remove \"Windows 10\" --name \"Apps\"",
    "vbox:sharedfolder:add": "VBoxManage sharedfolder add \"Windows 10\" --name \"Apps\" --hostpath \"$(pwd)\" --automount",
    "vbox:run": "VBoxManage startvm \"Windows 10\"",
    "enigma": "npm run enigma:generate && npm run enigma:build",
    "enigma:generate": "enigmavirtualbox gen WorkLogCalendar.evp dist/WorkLogCalendar/WorkLogCalendar.exe dist/WorkLogCalendar/win32/WorkLogCalendar.exe dist/WorkLogCalendar/win32/nw.pak dist/WorkLogCalendar/win32/icudtl.dat",
    "enigma:build": "enigmavirtualbox cli WorkLogCalendar.evp"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "enigmavirtualbox": "^0.9.3",
    "fullcalendar": "^2.3.1",
    "jquery": "^2.1.4",
    "material-design-lite": "^1.0.4-2",
    "moment": "^2.10.3",
    "node-notifier": "^4.2.3",
    "nw": "^0.19.0",
    "pty": "0.0.0"
  },
  "single-instance": false,
  "chromium-args": "--allow-file-access-from-files --allow-file-access --user-data-dir --mixed-context"
}
